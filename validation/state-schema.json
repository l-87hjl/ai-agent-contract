{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-contract.example.com/schemas/state.json",
  "title": "Agent State",
  "description": "Schema for STATE.json - tracks agent session state",
  "type": "object",
  "required": ["sessionId", "status", "lastUpdated"],
  "properties": {
    "sessionId": {
      "type": "string",
      "description": "Unique identifier for this session",
      "pattern": "^session-[a-zA-Z0-9-]+$",
      "examples": ["session-abc123", "session-auth-2026-02-01-001"]
    },
    "status": {
      "type": "string",
      "description": "Current session status",
      "enum": ["idle", "running", "paused", "completed", "failed"]
    },
    "lastUpdated": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update",
      "format": "date-time",
      "examples": ["2026-02-01T14:30:00Z"]
    },
    "currentTask": {
      "type": ["string", "null"],
      "description": "Description of current task being worked on"
    },
    "checkpoint": {
      "type": ["object", "null"],
      "description": "Session checkpoint for resume capability",
      "properties": {
        "phase": {
          "type": "string",
          "description": "Current phase of work"
        },
        "completedSteps": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of completed steps"
        },
        "branch": {
          "type": "string",
          "description": "Current git branch"
        },
        "filesCreated": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files created in this session"
        },
        "filesModified": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files modified in this session"
        },
        "nextSteps": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Planned next steps"
        }
      }
    },
    "errors": {
      "type": "array",
      "description": "Errors encountered during session",
      "items": {
        "type": "object",
        "required": ["timestamp", "code", "message"],
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "details": {
            "type": "object"
          }
        }
      },
      "default": []
    },
    "metadata": {
      "type": "object",
      "description": "Additional session metadata",
      "properties": {
        "contractVersion": {
          "type": "string"
        },
        "bootVersion": {
          "type": "string"
        },
        "workspace": {
          "type": "string"
        },
        "startedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "additionalProperties": true,
  "examples": [
    {
      "sessionId": "session-example-001",
      "status": "running",
      "lastUpdated": "2026-02-01T14:30:00Z",
      "currentTask": "Implement user authentication",
      "checkpoint": {
        "phase": "development",
        "completedSteps": ["planning", "branch_created"],
        "branch": "feature/add-auth"
      },
      "errors": []
    }
  ]
}
